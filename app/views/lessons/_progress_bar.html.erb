<!-- app/views/lessons/_progress_bar.html.erb -->
<div id="lesson_progress_bar" class="flex-grow mx-8">
  <div class="flex justify-between items-center mb-1">
    <span class="text-sm font-bold text-gray-600">Lesson Progress</span>
    <span class="text-sm font-bold text-green-600"><%= correct_answers %> / <%= total_questions %> Correct</span>
  </div>
  <div class="w-full bg-gray-200 rounded-full h-2.5">
    <div class="bg-green-500 h-2.5 rounded-full transition-all duration-500" style="width: <%= completion_percentage %>%"></div>
  </div>
</div>
