  <!-- Top Navigation Bar -->
  <nav class="bg-white/95 backdrop-blur-sm border-b border-white/20 sticky top-0 z-50 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-20">
        <!-- Logo -->
        <div class="flex items-center space-x-3">
          <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-lg floating">
            <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-black gradient-text">AWS Study Quest</h1>
            <p class="text-xs text-gray-600 font-semibold">Master SAA-C03 Certification</p>
          </div>
        </div>

        <%= render "layouts/user_stats" %>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center mb-16">
        <h2 class="text-5xl sm:text-6xl font-black text-white mb-6 drop-shadow-lg">
          Master AWS SAA-C03
        </h2>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto font-semibold">
          üöÄ Learn AWS architecture like a game! Earn XP, build streaks, and ace your certification with our interactive lessons.
        </p>

        <% unless logged_in? %>
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
            <%= link_to signup_path, class: "bg-gradient-to-r from-green-400 to-blue-500 text-white px-8 py-4 rounded-full text-xl font-black hover:shadow-2xl transition-all duration-300 transform hover:scale-105 neon-glow" do %>
              üéØ Start Your Journey FREE
            <% end %>
            <%= link_to login_path, class: "bg-white/20 backdrop-blur text-white px-8 py-4 rounded-full text-xl font-bold hover:bg-white/30 transition-all duration-200" do %>
              üîì Try Demo Account
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Domain Learning Path -->
      <div class="mb-8">
        <h3 class="text-3xl font-black text-white text-center mb-8">
          üéØ Your Learning Path
        </h3>
      </div>

      <!-- Domain Cards Grid -->
      <div class="grid gap-8 lg:grid-cols-2 max-w-6xl mx-auto">
        <% domain_colors = [
          { bg: 'from-blue-500 to-cyan-400', icon: 'üèóÔ∏è', accent: 'bg-blue-500' },
          { bg: 'from-green-500 to-emerald-400', icon: '‚ö°', accent: 'bg-green-500' },
          { bg: 'from-purple-500 to-pink-400', icon: 'üîí', accent: 'bg-purple-500' },
          { bg: 'from-orange-500 to-red-400', icon: 'üí∞', accent: 'bg-orange-500' }
        ] %>

        <% @domains.each_with_index do |domain, index| %>
          <% color = domain_colors[index] %>
          <% if logged_in? %>
            <% progress = @user_progress.find { |p| p[:domain] == domain } %>
            <% completion = progress[:completion_percentage] %>
            <% completed_lessons = progress[:completed_lessons] %>
            <% total_lessons = progress[:total_lessons] %>
          <% else %>
            <% completion = 0 %>
            <% completed_lessons = 0 %>
            <% total_lessons = domain.lessons.count %>
          <% end %>

          <div class="domain-card bg-white rounded-3xl shadow-2xl overflow-hidden">
            <!-- Card Header with Progress Ring -->
            <div class="bg-gradient-to-r <%= color[:bg] %> p-8 relative">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-center mb-4">
                    <span class="text-4xl mr-3"><%= color[:icon] %></span>
                    <div>
                      <h3 class="text-xl font-black text-white"><%= domain.name %></h3>
                      <div class="flex items-center text-white/80 text-sm font-bold">
                        <span class="bg-white/20 px-3 py-1 rounded-full mr-2">
                          <%= (domain.weight * 100).to_i %>% of Exam
                        </span>
                        <span><%= total_lessons %> Lessons</span>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Circular Progress -->
                <div class="relative w-20 h-20">
                  <svg class="progress-ring w-20 h-20" viewBox="0 0 120 120">
                    <circle cx="60" cy="60" r="54" fill="none" stroke="white" stroke-opacity="0.2" stroke-width="8"/>
                    <circle cx="60" cy="60" r="54" fill="none" stroke="white" stroke-width="8" stroke-linecap="round"
                            stroke-dasharray="<%= 2 * Math::PI * 54 %>"
                            stroke-dashoffset="<%= 2 * Math::PI * 54 * (1 - completion/100) %>"
                            class="progress-ring-circle"/>
                  </svg>
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span class="text-white font-black text-lg"><%= completion.round %>%</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Card Body -->
            <div class="p-8">
              <p class="text-gray-600 mb-6 text-sm leading-relaxed">
                <%= domain.description %>
              </p>

              <!-- Progress Bar -->
              <div class="mb-6">
                <div class="flex justify-between text-sm text-gray-500 mb-2">
                  <span class="font-semibold">Your Progress</span>
                  <span class="font-bold"><%= completed_lessons %>/<%= total_lessons %> completed</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-3">
                  <div class="<%= color[:accent] %> h-3 rounded-full transition-all duration-500 ease-out"
                       style="width: <%= completion %>%"></div>
                </div>
              </div>

              <!-- Action Button -->
              <div class="flex items-center justify-between">
                <%= link_to domain_path(domain),
                    class: "flex-1 bg-gradient-to-r #{color[:bg]} text-white font-black py-4 px-6 rounded-2xl hover:shadow-xl transition-all duration-200 transform hover:scale-105 text-center text-lg" do %>
                  <% if logged_in? && completion > 0 %>
                    üöÄ Continue Learning
                  <% else %>
                    ‚ñ∂Ô∏è Start Learning
                  <% end %>
                <% end %>

                <% if logged_in? && completion == 100 %>
                  <div class="ml-4 flex items-center text-green-500">
                    <span class="text-3xl">üèÜ</span>
                    <span class="ml-2 font-black text-sm">MASTERED!</span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Overall Progress Section -->
      <% if logged_in? %>
        <div class="mt-16 bg-white/10 backdrop-blur rounded-3xl p-8 text-center">
          <h3 class="text-2xl font-black text-white mb-6">üéØ Your Overall Progress</h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="bg-white/20 rounded-2xl p-4">
              <div class="text-3xl font-black text-white"><%= @user_progress.sum { |p| p[:completed_lessons] } %></div>
              <div class="text-white/80 font-bold text-sm">Lessons Completed</div>
            </div>
            <div class="bg-white/20 rounded-2xl p-4">
              <div class="text-3xl font-black text-white"><%= current_user.experience_points %></div>
              <div class="text-white/80 font-bold text-sm">Total XP</div>
            </div>
            <div class="bg-white/20 rounded-2xl p-4">
              <div class="text-3xl font-black text-white"><%= current_user.level %></div>
              <div class="text-white/80 font-bold text-sm">Current Level</div>
            </div>
            <div class="bg-white/20 rounded-2xl p-4">
              <div class="text-3xl font-black text-white"><%= current_user.current_streak %></div>
              <div class="text-white/80 font-bold text-sm">Day Streak</div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Floating Elements for Visual Interest -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-white/10 rounded-full blur-xl floating"></div>
    <div class="absolute top-40 right-20 w-32 h-32 bg-purple-300/20 rounded-full blur-2xl floating" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-40 left-1/4 w-24 h-24 bg-blue-300/20 rounded-full blur-xl floating" style="animation-delay: 2s;"></div>
  </div>
