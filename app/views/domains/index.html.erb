  <!-- Top Navigation Bar -->
  <nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-blue-600 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
            </svg>
          </div>
          <div>
            <h1 class="text-xl font-bold text-gray-900">AWS Study</h1>
            <p class="text-xs text-gray-500 font-medium">SAA-C03 Certification</p>
          </div>
        </div>

        <%= render "layouts/user_stats" %>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <% unless logged_in? %>
        <div class="text-center mb-12">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
            Master AWS SAA-C03
          </h2>
          <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
            Learn AWS architecture through interactive lessons. Track progress, earn achievements, and prepare for certification success.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
            <%= link_to signup_path, class: "bg-blue-600 text-white px-8 py-3 rounded-lg text-lg font-semibold hover:bg-blue-700 transition-colors duration-200" do %>
              Start Learning Free
            <% end %>
            <%= link_to login_path, class: "border border-gray-300 text-gray-700 px-8 py-3 rounded-lg text-lg font-medium hover:bg-gray-50 transition-colors duration-200" do %>
              Sign In
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Social Proof -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center space-x-6 text-sm text-gray-500">
          <span>4 Learning Domains</span>
          <span>•</span>
          <span><%= Domain.sum { |d| d.lessons.count } %> Interactive Lessons</span>
          <% if logged_in? %>
            <span>•</span>
            <span>Level <%= current_user.level %> Progress</span>
          <% end %>
        </div>
      </div>

      <!-- Domain Learning Path -->
      <div class="mb-6">
        <h3 class="text-2xl font-bold text-gray-900 text-center mb-8">
          Learning Path
        </h3>
      </div>

      <!-- Domain Cards Grid -->
      <div class="grid gap-8 lg:grid-cols-2 max-w-6xl mx-auto">
        <% domain_colors = [
          { bg: 'bg-blue-50', icon: '🏗️', accent: 'bg-blue-500', border: 'border-blue-200', text: 'text-blue-700' },
          { bg: 'bg-green-50', icon: '⚡', accent: 'bg-green-500', border: 'border-green-200', text: 'text-green-700' },
          { bg: 'bg-purple-50', icon: '🔒', accent: 'bg-purple-500', border: 'border-purple-200', text: 'text-purple-700' },
          { bg: 'bg-orange-50', icon: '💰', accent: 'bg-orange-500', border: 'border-orange-200', text: 'text-orange-700' }
        ] %>

        <% @domains.each_with_index do |domain, index| %>
          <% color = domain_colors[index] %>
          <% if logged_in? %>
            <% progress = @user_progress.find { |p| p[:domain] == domain } %>
            <% completion = progress[:completion_percentage] %>
            <% completed_lessons = progress[:completed_lessons] %>
            <% total_lessons = progress[:total_lessons] %>
          <% else %>
            <% completion = 0 %>
            <% completed_lessons = 0 %>
            <% total_lessons = domain.lessons.count %>
          <% end %>

          <div class="domain-card bg-white rounded-2xl border #{color[:border]} shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
            <!-- Card Header -->
            <div class="#{color[:bg]} p-6 border-b #{color[:border]}">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-12 h-12 #{color[:accent]} rounded-xl flex items-center justify-center">
                    <span class="text-2xl"><%= color[:icon] %></span>
                  </div>
                  <div>
                    <h3 class="text-lg font-semibold #{color[:text]}"><%= domain.name %></h3>
                    <div class="flex items-center space-x-3 text-sm text-gray-600">
                      <span><%= (domain.weight * 100).to_i %>% of exam</span>
                      <span>•</span>
                      <span><%= total_lessons %> lessons</span>
                    </div>
                  </div>
                </div>

                <!-- Simple Progress Circle -->
                <div class="text-right">
                  <div class="text-2xl font-bold #{color[:text]}"><%= completion.round %>%</div>
                  <div class="text-xs text-gray-500">complete</div>
                </div>
              </div>
            </div>

            <!-- Card Body -->
            <div class="p-6">
              <p class="text-gray-600 mb-4 text-sm leading-relaxed">
                <%= domain.description %>
              </p>

              <!-- Progress Bar -->
              <div class="mb-6">
                <div class="flex justify-between text-sm text-gray-500 mb-2">
                  <span>Progress</span>
                  <span><%= completed_lessons %>/<%= total_lessons %> lessons</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="#{color[:accent]} h-2 rounded-full transition-all duration-300"
                       style="width: <%= completion %>%"></div>
                </div>
              </div>

              <!-- Action Button -->
              <%= link_to domain_path(domain),
                  class: "w-full block text-center #{color[:accent]} text-white font-medium py-3 px-6 rounded-lg hover:opacity-90 transition-opacity duration-200" do %>
                <% if logged_in? && completion > 0 %>
                  Continue Learning
                <% else %>
                  Start Learning
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Overall Progress Section -->
      <% if logged_in? %>
        <div class="mt-12 bg-white rounded-2xl border border-gray-200 p-8 text-center">
          <h3 class="text-xl font-semibold text-gray-900 mb-6">Your Progress</h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="text-center">
              <div class="text-2xl font-bold text-blue-600"><%= @user_progress.sum { |p| p[:completed_lessons] } %></div>
              <div class="text-gray-500 text-sm">Lessons Completed</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-green-600"><%= current_user.experience_points %></div>
              <div class="text-gray-500 text-sm">Experience Points</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-purple-600"><%= current_user.level %></div>
              <div class="text-gray-500 text-sm">Current Level</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-orange-600"><%= current_user.current_streak %></div>
              <div class="text-gray-500 text-sm">Day Streak</div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
