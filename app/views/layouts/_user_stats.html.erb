<%= turbo_frame_tag "user_stats" do %>
  <div class="flex items-center space-x-6">
    <% if logged_in? %>
      <!-- Streak Counter -->
      <div class="flex items-center bg-gradient-to-r from-orange-400 to-red-500 text-white px-4 py-2 rounded-full shadow-lg">
        <span class="text-2xl mr-2 pulse">ðŸ”¥</span>
        <div class="text-center">
          <div class="text-xl font-black"><%= current_user.current_streak %></div>
          <div class="text-xs font-bold opacity-90">Day Streak</div>
        </div>
      </div>

      <!-- XP and Level -->
      <div class="flex items-center bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-4 py-2 rounded-full shadow-lg">
        <span class="text-2xl mr-2">âš¡</span>
        <div class="text-center">
          <div class="text-xl font-black"><%= current_user.experience_points %></div>
          <div class="text-xs font-bold opacity-90">XP â€¢ Level <%= current_user.level %></div>
        </div>
      </div>

      <!-- User Menu -->
      <div class="flex items-center space-x-3">
        <div class="w-12 h-12 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full flex items-center justify-center font-black text-white text-lg shadow-lg">
          <%= current_user.name.first.upcase %>
        </div>
        <div class="hidden sm:block">
          <div class="font-bold text-gray-800"><%= current_user.name %></div>
          <%= link_to "Profile", profile_path, class: "text-sm text-blue-600 hover:text-blue-800 font-semibold" %>
          <span class="mx-1"> â€¢ </span>
          <%= link_to "Logout", logout_path, method: :delete, class: "text-sm text-gray-500 hover:text-red-600" %>
        </div>
      </div>
    <% else %>
      <!-- Guest Actions -->
      <div class="flex space-x-3">
        <%= link_to login_path, class: "bg-white/20 backdrop-blur text-blue-800 px-6 py-3 rounded-full hover:bg-white/30 transition-all duration-200 font-bold shadow-lg" do %>
          Sign In
        <% end %>
        <%= link_to signup_path, class: "bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-3 rounded-full hover:shadow-xl transition-all duration-200 font-bold neon-glow" do %>
          Start Learning
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>