<!-- app/views/games/cost_calculator.html.erb -->

<div class="bg-gray-800 min-h-screen flex flex-col items-center justify-center p-4" data-controller="cost-calculator">
  <div class="w-full max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-black text-white">ðŸ’° Cost Calculator Challenge</h1>
      <p class="text-white/80 text-lg mt-2">Calculate the estimated monthly cost for the scenario below.</p>
    </div>

    <!-- Scenario -->
    <div class="bg-white/10 backdrop-blur rounded-2xl p-8 mb-8">
      <h2 class="text-2xl font-bold text-white mb-2"><%= @cost_scenarios.first[:title] %></h2>
      <p class="text-white/90 mb-4"><%= @cost_scenarios.first[:description] %></p>
      <ul class="list-disc list-inside text-white/90 space-y-2">
        <% @cost_scenarios.first[:requirements].each do |item, value| %>
          <li><strong><%= item %>:</strong> <%= value %></li>
        <% end %>
      </ul>
    </div>

    <!-- Pricing Table -->
    <div class="bg-white/10 backdrop-blur rounded-2xl p-8 mb-8">
      <h3 class="text-xl font-bold text-white mb-4">Pricing Information</h3>
      <table class="w-full text-left text-white/90">
        <thead>
          <tr>
            <th class="p-2">Service</th>
            <th class="p-2">Price</th>
          </tr>
        </thead>
        <tbody>
          <% @aws_services_pricing.each do |service| %>
            <tr class="border-b border-white/20">
              <td class="p-2"><%= service[:name] %></td>
              <td class="p-2">$<%= service[:price_per_hour] || service[:price_per_gb] || service[:price_per_million] %> per <%= service[:unit] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Calculator -->
    <div class="bg-white/10 backdrop-blur rounded-2xl p-8">
      <h3 class="text-xl font-bold text-white mb-4">Your Calculation</h3>
      <div class="flex items-center justify-center">
        <span class="text-white text-2xl font-bold mr-2">$</span>
        <input type="number" class="bg-white/20 text-white text-2xl font-bold rounded-lg p-2 w-48 text-center" placeholder="0.00" data-cost-calculator-target="costInput">
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-8">
      <button class="bg-green-500 text-white font-bold py-3 px-8 rounded-full text-lg hover:bg-green-600 transition-all duration-200" data-action="click->cost-calculator#checkCost">
        Check Cost
      </button>
      <%= link_to "Back to Arcade", games_path, class: "text-white/80 ml-4 hover:text-white" %>
    </div>
  </div>

  <!-- Result Modal -->
  <div class="fixed inset-0 bg-black/60 hidden flex items-center justify-center p-4" data-cost-calculator-target="modal">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full text-center transform transition-all duration-300 scale-95">
      <h2 class="text-3xl font-black mb-4" data-cost-calculator-target="modalTitle"></h2>
      <p class="text-gray-600 text-lg mb-6" data-cost-calculator-target="modalMessage"></p>
      <div class="grid grid-cols-2 gap-4 text-white mb-6">
        <div class="bg-blue-500 rounded-lg p-4">
          <div class="text-2xl font-bold" data-cost-calculator-target="modalScore"></div>
          <div>Your Answer</div>
        </div>
        <div class="bg-purple-500 rounded-lg p-4">
          <div class="text-2xl font-bold" data-cost-calculator-target="modalCorrect"></div>
          <div>Correct Answer</div>
        </div>
      </div>
      <a href="<%= games_cost_calculator_path %>" class="bg-blue-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-blue-600 transition-all duration-200">
        Try Another Scenario
      </a>
    </div>
  </div>
</div>