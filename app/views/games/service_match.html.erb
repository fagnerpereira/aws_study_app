<!-- app/views/games/service_match.html.erb -->

<div class="bg-gray-800 min-h-screen flex flex-col items-center justify-center p-4" data-controller="service-match">
  <div class="w-full max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-black text-white">ðŸ§© Service Match Challenge</h1>
      <p class="text-white/80 text-lg mt-2">Drag each service to its correct category. Good luck!</p>
    </div>

    <!-- Game Board -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Column 1: Services to be Matched -->
      <div class="bg-white/10 backdrop-blur rounded-2xl p-6">
        <h2 class="text-2xl font-bold text-white text-center mb-4">AWS Services</h2>
        <div id="services-container" class="space-y-3 min-h-[200px]">
          <% @shuffled_services.each do |service| %>
            <div class="service-card bg-white p-4 rounded-lg shadow cursor-grab" draggable="true" data-service-name="<%= service[:name] %>" data-action="dragstart->service-match#dragstart dragend->service-match#dragend">
              <p class="font-bold text-gray-800"><%= service[:name] %></p>
              <p class="text-sm text-gray-600"><%= service[:description] %></p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Columns 2 & 3: Categories -->
      <div class="md:col-span-2 grid grid-cols-2 gap-6">
        <% @categories.each do |category| %>
          <div class="category-container bg-white/10 backdrop-blur rounded-2xl p-6">
            <h2 class="text-2xl font-bold text-white text-center mb-4"><%= category %></h2>
            <div class="category-dropzone min-h-[150px] bg-black/20 rounded-lg p-2" data-category-name="<%= category %>" data-service-match-target="dropzone" data-action="dragover->service-match#dragover dragenter->service-match#dragenter dragleave->service-match#dragleave drop->service-match#drop">
              <!-- Dropped services will appear here -->
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-8">
      <button id="check-answers-btn" class="bg-green-500 text-white font-bold py-3 px-8 rounded-full text-lg hover:bg-green-600 transition-all duration-200" data-action="click->service-match#checkAnswers">
        Check Answers
      </button>
      <%= link_to "Back to Arcade", games_path, class: "text-white/80 ml-4 hover:text-white" %>
    </div>
  </div>

  <!-- Result Modal -->
  <div id="result-modal" class="fixed inset-0 bg-black/60 hidden flex items-center justify-center p-4" data-service-match-target="modal">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full text-center transform transition-all duration-300 scale-95">
      <h2 id="modal-title" class="text-3xl font-black mb-4" data-service-match-target="modalTitle"></h2>
      <p id="modal-message" class="text-gray-600 text-lg mb-6" data-service-match-target="modalMessage"></p>
      <div class="grid grid-cols-2 gap-4 text-white mb-6">
        <div class="bg-blue-500 rounded-lg p-4">
          <div id="modal-score" class="text-2xl font-bold" data-service-match-target="modalScore"></div>
          <div>Score</div>
        </div>
        <div class="bg-purple-500 rounded-lg p-4">
          <div id="modal-xp" class="text-2xl font-bold" data-service-match-target="modalXp"></div>
          <div>XP Earned</div>
        </div>
      </div>
      <a href="<%= games_service_match_path %>" class="bg-blue-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-blue-600 transition-all duration-200">
        Play Again
      </a>
    </div>
  </div>
</div>
