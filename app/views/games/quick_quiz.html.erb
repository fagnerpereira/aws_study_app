<!-- app/views/games/quick_quiz.html.erb -->

<div class="bg-gray-800 min-h-screen flex flex-col items-center justify-center p-4" data-controller="quick-quiz">
  <div class="w-full max-w-2xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-black text-white">âš¡ Quick Quiz</h1>
      <p class="text-white/80 text-lg mt-2">Test your knowledge with these rapid-fire questions.</p>
    </div>

    <!-- Quiz Card -->
    <div class="bg-white/10 backdrop-blur rounded-2xl p-8">
      <div data-quick-quiz-target="questionContainer">
        <%= render 'quiz_question', question: @current_question %>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-8">
      <%= link_to "Back to Arcade", games_path, class: "text-white/80 ml-4 hover:text-white" %>
    </div>
  </div>

  <!-- Result Modal -->
  <div class="fixed inset-0 bg-black/60 hidden flex items-center justify-center p-4" data-quick-quiz-target="modal">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full text-center transform transition-all duration-300 scale-95">
      <h2 class="text-3xl font-black mb-4" data-quick-quiz-target="modalTitle"></h2>
      <p class="text-gray-600 text-lg mb-6" data-quick-quiz-target="modalMessage"></p>
      <div class="grid grid-cols-2 gap-4 text-white mb-6">
        <div class="bg-blue-500 rounded-lg p-4">
          <div class="text-2xl font-bold" data-quick-quiz-target="modalScore"></div>
          <div>Score</div>
        </div>
        <div class="bg-purple-500 rounded-lg p-4">
          <div class="text-2xl font-bold" data-quick-quiz-target="modalXp"></div>
          <div>XP Earned</div>
        </div>
      </div>
      <a href="<%= games_quick_quiz_path %>" class="bg-blue-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-blue-600 transition-all duration-200">
        Play Again
      </a>
    </div>
  </div>
</div>