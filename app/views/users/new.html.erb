<div class="max-w-md w-full">
  <!-- Logo and Header -->
  <div class="text-center mb-8 slide-in">
    <div class="flex justify-center items-center mb-6">
      <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-purple-600 rounded-3xl flex items-center justify-center shadow-2xl floating">
        <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
        </svg>
      </div>
    </div>
    <h1 class="text-4xl font-black text-white mb-2 drop-shadow-lg">AWS Study Quest</h1>
    <p class="text-white/80 text-lg font-semibold">Join the journey, future architect! 🚀</p>
  </div>

  <!-- Signup Card -->
  <div class="bg-white/95 backdrop-blur rounded-3xl shadow-2xl p-8 slide-in" style="animation-delay: 0.2s;">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-black text-gray-900 mb-2">Create Your Account</h2>
      <p class="text-gray-600 font-semibold">Start your AWS learning adventure today!</p>
    </div>

    <%= form_with model: @user, url: signup_path, local: true, class: "space-y-6" do |form| %>
      <% if form.object.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
          <p class="font-bold">Oops! Something went wrong:</p>
          <ul class="mt-2 list-disc list-inside">
            <% form.object.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, class: "block text-sm font-bold text-gray-700 mb-2" do %>
          👤 Your Name
        <% end %>
        <%= form.text_field :name,
            class: "input-field w-full px-4 py-4 rounded-2xl bg-gray-50 focus:bg-white focus:outline-none text-lg font-semibold",
            placeholder: "John Doe",
            required: true %>
      </div>

      <div>
        <%= form.label :email, class: "block text-sm font-bold text-gray-700 mb-2" do %>
          📧 Email Address
        <% end %>
        <%= form.email_field :email,
            class: "input-field w-full px-4 py-4 rounded-2xl bg-gray-50 focus:bg-white focus:outline-none text-lg font-semibold",
            placeholder: "your@email.com",
            required: true %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-bold text-gray-700 mb-2" do %>
          🔒 Password
        <% end %>
        <%= form.password_field :password,
            class: "input-field w-full px-4 py-4 rounded-2xl bg-gray-50 focus:bg-white focus:outline-none text-lg font-semibold",
            placeholder: "Your secure password",
            required: true %>
      </div>

      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-bold text-gray-700 mb-2" do %>
          🔐 Confirm Password
        <% end %>
        <%= form.password_field :password_confirmation,
            class: "input-field w-full px-4 py-4 rounded-2xl bg-gray-50 focus:bg-white focus:outline-none text-lg font-semibold",
            placeholder: "Confirm your password",
            required: true %>
      </div>

      <div class="pt-4">
        <%= form.submit "🚀 Create Account",
            class: "login-button w-full text-white py-4 px-6 rounded-2xl font-black text-lg cursor-pointer border-none" %>
      </div>
    <% end %>

    <!-- Divider -->
    <div class="flex items-center my-8">
      <div class="flex-1 border-t border-gray-200"></div>
      <div class="px-4 text-gray-500 font-semibold text-sm">OR</div>
      <div class="flex-1 border-t border-gray-200"></div>
    </div>

    <!-- Login Link -->
    <div class="text-center">
      <p class="text-gray-600 font-semibold mb-4">Already have an account?</p>
      <%= link_to login_path, class: "inline-block bg-gradient-to-r from-green-400 to-blue-500 text-white px-8 py-3 rounded-full font-black hover:shadow-xl transition-all duration-200 transform hover:scale-105" do %>
        ➡️ Sign In Here
      <% end %>
    </div>
  </div>

  <!-- Features Preview (reused from login page) -->
  <div class="grid grid-cols-3 gap-4 mt-8 slide-in" style="animation-delay: 0.6s;">
    <div class="bg-white/10 backdrop-blur rounded-2xl p-4 text-center">
      <div class="text-2xl mb-2">🎮</div>
      <div class="text-white text-xs font-bold">Gamified Learning</div>
    </div>
    <div class="bg-white/10 backdrop-blur rounded-2xl p-4 text-center">
      <div class="text-2xl mb-2">🔥</div>
      <div class="text-white text-xs font-bold">Daily Streaks</div>
    </div>
    <div class="bg-white/10 backdrop-blur rounded-2xl p-4 text-center">
      <div class="text-2xl mb-2">🏆</div>
      <div class="text-white text-xs font-bold">Real AWS Content</div>
    </div>
  </div>
</div>