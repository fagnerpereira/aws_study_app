  <!-- Background Elements -->
  <div class="absolute top-20 left-10 w-32 h-32 bg-white/10 rounded-full blur-xl floating"></div>
  <div class="absolute top-40 right-20 w-24 h-24 bg-purple-300/20 rounded-full blur-2xl floating" style="animation-delay: 1s;"></div>
  <div class="absolute bottom-40 left-1/4 w-40 h-40 bg-blue-300/20 rounded-full blur-xl floating" style="animation-delay: 2s;"></div>

  <div class="max-w-md w-full">
    <!-- Logo and Header -->
    <div class="text-center mb-8 slide-in">
      <div class="flex justify-center items-center mb-6">
        <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-purple-600 rounded-3xl flex items-center justify-center shadow-2xl floating">
          <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
        </div>
      </div>
      <h1 class="text-4xl font-black text-white mb-2 drop-shadow-lg">AWS Study Quest</h1>
      <p class="text-white/80 text-lg font-semibold">Welcome back, future architect! 🚀</p>
    </div>

    <!-- Login Card -->
    <div class="bg-white/95 backdrop-blur rounded-3xl shadow-2xl p-8 slide-in" style="animation-delay: 0.2s;">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Sign In to Continue</h2>
        <p class="text-gray-600 font-semibold">Ready to level up your AWS skills?</p>
      </div>

      <%= form_with url: login_path, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            📧 Email Address
          <% end %>
          <%= form.email_field :email,
              class: "input-field w-full px-4 py-4 rounded-2xl bg-gray-50 focus:bg-white focus:outline-none text-lg font-semibold",
              placeholder: "your@email.com",
              required: true %>
        </div>

        <div>
          <%= form.label :password, class: "block text-sm font-bold text-gray-700 mb-2" do %>
            🔒 Password
          <% end %>
          <%= form.password_field :password,
              class: "input-field w-full px-4 py-4 rounded-2xl bg-gray-50 focus:bg-white focus:outline-none text-lg font-semibold",
              placeholder: "Your secure password",
              required: true %>
        </div>

        <div class="pt-4">
          <%= form.submit "🚀 Sign In & Start Learning",
              class: "login-button w-full text-white py-4 px-6 rounded-2xl font-black text-lg cursor-pointer border-none" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="flex items-center my-8">
        <div class="flex-1 border-t border-gray-200"></div>
        <div class="px-4 text-gray-500 font-semibold text-sm">OR</div>
        <div class="flex-1 border-t border-gray-200"></div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center">
        <p class="text-gray-600 font-semibold mb-4">New to AWS Study Quest?</p>
        <%= link_to signup_path, class: "inline-block bg-gradient-to-r from-green-400 to-blue-500 text-white px-8 py-3 rounded-full font-black hover:shadow-xl transition-all duration-200 transform hover:scale-105" do %>
          ✨ Create Free Account
        <% end %>
      </div>
    </div>

    <!-- Demo Account Card -->
    <div class="demo-card text-white rounded-2xl p-6 mt-6 text-center slide-in" style="animation-delay: 0.4s;">
      <h3 class="font-black text-lg mb-2">🎯 Try Demo Account</h3>
      <p class="text-white/90 font-semibold text-sm mb-3">Jump right in with our pre-loaded demo account!</p>
      <div class="bg-white/20 rounded-xl p-3 backdrop-blur">
        <div class="font-mono text-sm">
          <div class="font-bold">📧 demo@awsstudy.com</div>
          <div class="font-bold">🔑 password123</div>
        </div>
      </div>
    </div>

    <!-- Features Preview -->
    <div class="grid grid-cols-3 gap-4 mt-8 slide-in" style="animation-delay: 0.6s;">
      <div class="bg-white/10 backdrop-blur rounded-2xl p-4 text-center">
        <div class="text-2xl mb-2">🎮</div>
        <div class="text-white text-xs font-bold">Gamified Learning</div>
      </div>
      <div class="bg-white/10 backdrop-blur rounded-2xl p-4 text-center">
        <div class="text-2xl mb-2">🔥</div>
        <div class="text-white text-xs font-bold">Daily Streaks</div>
      </div>
      <div class="bg-white/10 backdrop-blur rounded-2xl p-4 text-center">
        <div class="text-2xl mb-2">🏆</div>
        <div class="text-white text-xs font-bold">Real AWS Content</div>
      </div>
    </div>
  </div>