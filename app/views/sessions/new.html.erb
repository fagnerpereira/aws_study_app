<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo and Header -->
    <div class="text-center">
      <div class="flex justify-center items-center mb-6">
        <div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
        </div>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">AWS Study</h1>
      <p class="text-gray-600">Sign in to continue learning</p>
    </div>

    <!-- Login Card -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-8">
      <%= form_with url: login_path, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email, "Email address", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email,
              class: "w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm",
              placeholder: "Enter your email",
              required: true %>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password,
              class: "w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm",
              placeholder: "Enter your password",
              required: true %>
        </div>

        <div>
          <%= form.submit "Sign in",
              class: "w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">New to AWS Study?</span>
        </div>
      </div>

      <!-- Sign Up Link -->
      <div class="text-center">
        <%= link_to signup_path, class: "w-full block border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-50 transition-colors duration-200 text-center" do %>
          Create account
        <% end %>
      </div>
    </div>

    <!-- Demo Account Info -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-center">
      <h3 class="font-semibold text-blue-900 mb-2">Try Demo Account</h3>
      <p class="text-blue-700 text-sm mb-3">Test the platform with pre-loaded progress</p>
      <div class="bg-white rounded-lg p-3 text-sm">
        <div class="text-gray-600 mb-1">Email: <span class="font-mono">demo@awsstudy.com</span></div>
        <div class="text-gray-600">Password: <span class="font-mono">password123</span></div>
      </div>
    </div>

    <!-- Features -->
    <div class="text-center">
      <div class="inline-flex items-center space-x-6 text-sm text-gray-500">
        <span>Interactive Lessons</span>
        <span>•</span>
        <span>Progress Tracking</span>
        <span>•</span>
        <span>Practice Tests</span>
      </div>
    </div>
  </div>
</div>