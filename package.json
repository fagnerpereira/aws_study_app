  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "esbuild": "^0.25.9",
    "tailwindcss": "^4.1.12"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.16"
  }
}
